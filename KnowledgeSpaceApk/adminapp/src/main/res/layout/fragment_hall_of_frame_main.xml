<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayHallOfFrameMainSc"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".AlumniActAdm.HallOfFrame.HallOfFrameMainFrag">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tVActivityMainHallOfFrame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:padding="10dp"
            android:text="Hall Of Frame"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="28sp"
            android:textStyle="bold" />

        <!--AdapterViewFlipper to display the functionality-->
        <AdapterViewFlipper
            android:id="@+id/adapterViewFlipper"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_below="@id/tVActivityMainHallOfFrame"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:padding="10dp">

        </AdapterViewFlipper>

        <View
            android:id="@+id/divider36"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="30dp"
            android:background="?android:attr/listDivider"
            android:backgroundTint="#070202" />

        <TextView
            android:id="@+id/viewAllAlumniTvHallOfFrameMainActAdm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_baseline_keyboard_double_arrow_right_24"
            android:gravity="center"
            android:minHeight="50dp"
            android:padding="10dp"
            android:text="View Previous Hall Of Frame"
            app:autoSizeTextType="uniform" />


    </LinearLayout>

</FrameLayout>