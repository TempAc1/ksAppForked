<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffffff">

    <TextView
        android:id="@+id/popUpTitleTxtV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:scaleType="fitCenter"
        android:text="ENTER YOUR POST" />

    <EditText
        android:id="@+id/postTitleTv"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/popUpTitleTxtV"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal"
        android:hint="Enter Post Title"
        android:textColor="#ff000000"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/postDesTv"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/postTitleTv"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal"
        android:hint="Enter Post Description"
        android:textColor="#ff000000"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/postDesTv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="POST"
        android:textColor="#ffffffff" />

</RelativeLayout>